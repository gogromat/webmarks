<div class="span3 ui-state-default sortElement">
  <% if !linkage_item.id.nil? %>
    <%= linkage_item.link_id %>
    <%= link_to linkage_item.link.content, linkage_item.link.uri, target: '_blank' %>
    <input type="hidden" value="<%= linkage_item.order %>">

    <%= render partial: 'linkages/linkage_delete', locals: {linkage_item: linkage_item} %>

  <% end %>
</div>