<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            	<span class="icon-bar"></span>
            	<span class="icon-bar"></span>
            	<span class="icon-bar"></span>
          	</a>
			<%= link_to "Webmarks", root_path, id: "logo", class: "brand" %>
			<nav>
				<ul class="nav pull-right nav-collapse collapse">
		            <li><%= link_to root_path    do %>
                            <%= icon_set("icon-home", text: 'Home') %>
                        <%  end %>
                    </li>
		            <li><%= link_to about_path   do %>
                            <%= icon_set("icon-question-sign", text: 'About') %>
                        <%  end %>
                    </li>
		            <li><%= link_to contact_path do %>
                            <%= icon_set("icon-info-sign", text: 'Contact') %>
                        <%  end %>
                    </li>
		            <li><%= link_to links_path   do %>
                            <%= icon_set("icon-globe", text: 'Links') %>
                        <%  end %>
                    </li>
					<!--todo: change to Rails form-->
					<!--
				    <form class="navbar-search pull-left">
				    	<input  type="text"   class="search-query" placeholder="Find webmark">
				    </form>-->
                    <% if signed_in? %>
                      <li><%= link_to "Users", users_path %></li>
                      <li id="fat-menu" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                          Account <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                          <li><%= link_to current_user do %>
                                  <%= icon_set("icon-user", text: 'Profile') %>
                              <%  end %>
                          </li>
                          <li><%= link_to edit_user_path(current_user) do %>
                                  <%= icon_set("icon-wrench", text: 'Settings') %>
                              <%  end %>
                          </li>
                          <li class="divider"></li>
                          <li>
                            <%= link_to signout_path, method: "delete" do %>
                                <%= icon_set("icon-ban-circle", text: 'Sign out') %>
                            <%  end %>
                          </li>
                        </ul>
                      </li>
                    <% else %>
                      <li><%= link_to signin_path do %>
                              <%= icon_set("icon-off", text: 'Sign in') %>
                          <%  end %>
                      </li>
                    <% end  %>
		        </ul>
			</nav>	
		</div>
	</div>
</header>